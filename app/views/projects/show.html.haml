= content_for :content_header do
  #project_header
    %h1
      = @project.name
    %h2 Um projeto de #{link_to @project.user.display_name, user_path(@project.user)}
#project_description
  #project_video
    %iframe{:src => @project.video_embed_url, :width => "460", :height => "345"}
    #project_share
      %h1 Faça parte disto e compartilhe este projeto
      %ul
        %li
          = link_to '#' do
            = image_tag 'auth/twitter_32.png', :title => 'Twitter'
            Twitter
        %li
          = link_to '#' do
            = image_tag 'auth/facebook_32.png', :title => 'Facebook'
            Facebook
        %li
          = image_tag 'link_32.png', :title => "Compartilhe o link"
          Link
          = text_field_tag "project_link", "http://catr.se/bPR1SQ"
      .embed
        = link_to '#' do
          = image_tag 'embed_32.png', :title => "Incorpore este projeto no seu site"
          Incorpore este projeto no seu site
  #project_about
    %h1 Sobre este projeto
    = @project.display_about.html_safe
#project_back_info
  #back_project
    .info
      .number 85
      Pessoas já apoiaram
      .number R$ 2.345.437
      Atingidos de
      %strong R$ 4.000
      .number 16
      Dias para atingir o mínimo
      .project_progress
        .progress_bar
          .progress{ :style => "width: 80%" }
            &nbsp;
    .project_warning.not_successful
      .text Este projeto só será financiado se pelo menos R$ 4.000 forem atingidos até #{@project.deadline.strftime('%d/%m')}
    .info
      = form_tag(new_project_path, :method => :get, :id => 'back_project_form') do
        %fieldset
          = submit_tag 'Quero apoiar este projeto'
  #rewards
    %h1 Recompensas para quem apoiar
    %ul
      %li
        %h1 Apoie com R$ 10+
        Ganhe uma cópia do DVD antes que todo mundo.
      %li
        %h1 Apoie com R$ 25+
        Ganhe uma cópia do DVD antes que todo mundo e uma camiseta massa.
      %li
        %h1 Apoie com R$ 50+
        Ganhe uma cópia do DVD antes que todo mundo, uma camiseta e um boné.
      %li
        %h1 Apoie com R$ 100+
        Ganhe uma cópia do DVD antes que todo mundo, uma camiseta, um boné e um chiclé.
      %li
        %h1 Apoie com R$ 500+
        Ganhe uma cópia do DVD antes que todo mundo, uma camiseta, um boné, um chiclé e seu nome nos créditos como patrocinador.
      %li
        %h1 Apoie com R$ 1.000+
        Ganhe uma cópia do DVD antes que todo mundo, uma camiseta, um boné, um chiclé, seu nome nos créditos como patrocinador e um beijo na boca dado pelo diretor.
.clear
= javascript_include_tag 'show_project'