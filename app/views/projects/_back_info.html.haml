#project_back_info
  #back_project
    .info
      .number= @project.total_backers
      #{pluralize_without_number(@project.total_backers, 'Pessoa')} já #{pluralize_without_number(@project.total_backers, 'apoiou', 'apoiaram')}
      .number= @project.display_pledged
      Atingidos de
      %strong= @project.display_goal
      .number= @project.days_to_go
      #{pluralize_without_number(@project.days_to_go, 'Dia')} #{pluralize_without_number(@project.days_to_go, 'restante')}
      .project_progress
        .progress_bar
          .progress{ :style => "width: #{ @project.display_percent }%" }
            &nbsp;
    - if @project.successful?
      .project_warning.successful
        .text
          - if @project.expired?
            Este projeto foi financiado em #{@project.display_expires_at}
          - else
            Este projeto será financiado em #{@project.display_expires_at}
    - else
      .project_warning.not_successful
        .text
          - if @project.expired?
            Este projeto não atingiu o mínimo de #{@project.display_goal} até #{@project.display_expires_at} e não foi financiado
          - else
            Este projeto só será financiado se pelo menos #{@project.display_goal} forem atingidos até #{@project.display_expires_at}
    .info
      = form_tag(back_project_path(@project), :method => :get, :id => 'back_project_form') do
        %fieldset
          = submit_tag 'Quero apoiar este projeto', :disabled => (not @project.can_back?)
  #rewards
    %h1
      Apoie e ganhe...
      = image_tag 'rewards_left_border.png', :id => 'rewards_left_border'
      = image_tag 'rewards_right_border.png', :id => 'rewards_right_border'
    %ul
      - @rewards.each do |reward|
        %li
          %h1 Para #{reward.display_minimum} ou mais
          - if reward.maximum_backers
            .maximum_backers
              - if reward.sold_out?
                .sold_out Esgotada
              - else
                .limited Recompensa limitada
              .remaining
                = reward.remaining
                de
                = reward.maximum_backers
                disponíveis
            .clear
          - if current_user and current_user.admin
            #{on_the_spot_edit reward, :description, :type => :textarea}
          - else
            = reward.description
          .clear
          .reward_backers
            = pluralize reward.backers.confirmed.count, 'apoiador', 'apoiadores'
            = image_tag 'badge.png', :class => "badge"
  - unless @backers.empty? or show_backers == false
    = render :partial => 'backers', :locals => {:show_all_link => true, :show_badge => false, :show_rewards => false}
.clear
= javascript_include_tag 'show_project'

