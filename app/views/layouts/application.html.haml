!!! 5
%html{:lang => :pt}
  %head
    %meta{:charset => 'utf-8'}
    %title= "#{@title}#{' · ' if @title}Catarse"
    = stylesheet_link_tag 'le-frog/jquery-ui-1.8.6.custom.css', :media => 'screen, projection'
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    /[if lt IE 9]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag 'jquery-1.4.4.min', 'jquery-ui-1.8.6.custom.min', 'jquery.ui.datepicker-pt-BR', 'jquery.numeric', 'jquery.maxlength', 'jquery.timers-1.2', 'timedKeyup'
    = csrf_meta_tag
    %link{ :rel => 'shortcut icon', :href => '/images/favicon.png' }
  %body#site
    = render :partial => 'layouts/flash', :locals => { :flash => flash } unless flash.empty?
    #main
      #header
        %h1= link_to "Catarse", root_path
        = render '/layouts/user' if current_user
        #menu
          %ul
            %li= link_to "Envie seu projeto", guidelines_projects_path, :id => 'new_project_link'
            - unless current_user
              %li= link_to "Login", '#', :id => 'login_link'
        .clear
      #content_wrapper
        #content_header
          = yield :content_header
        #content
          = yield
      #footer
        #footer_menu
          %ul
            %li= link_to "Sobre nós", '#'
            %li= link_to "Como funciona?", guidelines_projects_path
            %li= link_to "FAQ/Ajuda", '#'
            %li= link_to "Termos de uso", '#'
            %li= link_to "Política de privacidade", '#'
            %li= mail_to "contato@catarse.me", "Contato"
        #social_menu
          %ul
            %li
              = link_to '#' do
                = image_tag('social/twitter_32.png', :title => "Twitter")
                Siga no Twitter
            %li
              = link_to '#' do
                = image_tag('social/facebook_32.png', :title => "Facebook")
                Adicione no Facebook
            %li
              = link_to '#' do
                = image_tag('social/rss_32.png', :title => "Blog")
                Leia o blog
        #colophon
          = link_to "", "http://softa.com.br", :target => :_blank, :id => "softa_logo"
          %p#copyright Copyright © 2010
    = render '/layouts/login' unless current_user
